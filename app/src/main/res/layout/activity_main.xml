<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.diseno.calculadora.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/resultado"
        android:layout_width="353dp"
        android:layout_height="90dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="none|number"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="@+id/btn7" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="13dp"
        android:background="?attr/colorButtonNormal"
        android:text="7"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintStart_toStartOf="@+id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="8"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="9"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:background="#666666"
        android:text="/"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnmultiplicar"
        app:layout_constraintEnd_toEndOf="@+id/btnmultiplicar" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="13dp"
        android:background="?attr/colorButtonNormal"
        android:text="4"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintStart_toStartOf="@+id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:background="?attr/colorButtonNormal"
        android:text="5"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="6"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5" />

    <Button
        android:id="@+id/btnmultiplicar"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:background="#666666"
        android:text="*"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnrestar"
        app:layout_constraintEnd_toEndOf="@+id/btnrestar" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="13dp"
        android:background="?attr/colorButtonNormal"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnsigno"
        app:layout_constraintStart_toStartOf="@+id/btnsigno" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="2"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />

    <Button
        android:id="@+id/btnrestar"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:background="#666666"
        android:text="-"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnsumar"
        app:layout_constraintEnd_toEndOf="@+id/btnsumar" />

    <Button
        android:id="@+id/btnsigno"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="?attr/colorButtonNormal"
        android:text="+/-"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="397dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnsigno"
        app:layout_constraintStart_toEndOf="@+id/btnsigno" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="11dp"
        android:background="?attr/colorButtonNormal"
        android:text="."
        android:textColor="@android:color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btnsumar"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="#666666"
        android:text="+"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btnigual"
        app:layout_constraintEnd_toEndOf="@+id/btnigual" />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#333333"
        android:text="="
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnpunto"
        tools:layout_editor_absoluteX="289dp" />

</android.support.constraint.ConstraintLayout>
